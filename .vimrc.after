set tags=~/.tags
set nonumber
set relativenumber

let g:buffergator_viewport_split_policy='T'
let g:buffergator_split_size=15

imap jk  <esc>
imap kj <esc>

vmap <leader>F y :Ack <c-r>0<cr>
vmap > >gv 
vmap < <gv

map <C-P> :CtrlPMRU<cr>

set wildignore+=*/tmp*

color jellybeans

let $LOCALVIMRC = $HOME.'/.vimrc.local'
if filereadable($LOCALVIMRC)
  source $LOCALVIMRC
endif
